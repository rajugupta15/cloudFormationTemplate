{

	"AWSTemplateFormatVersion" : "2010-09-09",
	"Description" : " VPC with 2 subnets across",
	"Parameters" : {
		"VpcCIDRIpBlock": {
			"Description": "CIDR Block for the VPC",
			"Type": "String",
			"Default": "10.0.0.0/16"
	   	},
		"SubnetPublicIpBlocks": {
			"Description": "Comma-delimited list of 1 Public Subnet IP blocks",
			"Type": "CommaDelimitedList",
			"Default": "10.0.10.0/24"
		},
		"SubnetPrivateIpBlocks": {
			"Description": "Comma-delimited list of 1 Private Subnet IP blocks",
			"Type": "CommaDelimitedList",
			"Default": "10.0.11.0/24"
		},
		"ImageID" : {
			"Description" : "AMI ID",
			"Type" : "String",
			"Default" : "ami-6e165d0e"
		},
		"InstanceType" : {
			"Description" : "EC2 instance type",
			"Type" : "String",
			"Default" : "t1.small"
		},
		"RootDeviceSize": {
			"Description" : "Size of root partition for Host",
			"Type": "Number",
			"MinValue":"5",
			"MaxValue":"100",
			"Default":"8"
		},
		"AccessKey"	:	{
			"Description" : "SSH sceret key",
			"Type"	: "String",
			"Default" : "test-test",
			"MinLength" : "5",
			"MaxLength" : "255"
		},
		"PrivateIntanceIP": {
			"Description": "Private Instance IP",
			"Type":"String",
			"Default":"10.0.11.5"
		},
		"PublicIntanceIP": {
			"Description": "Private Instance IP",
			"Type":"String",
			"Default":"10.0.10.5"
		}
	},
	"Resources" : {
		"VPC" : {
			"Type" : "AWS::EC2::VPC",
			"Properties" : {
				"CidrBlock" :  {"Ref" : "VpcCIDRIpBlock"},
				"InstanceTenancy" : "default",
				"Tags" : [ {"Key" : "Name", "Value" : "testVPC"} ]
			}
		},
		"InternetGateway" : {
			"Type" : "AWS::EC2::InternetGateway",
			"Properties" : { 
				"Tags" : [ {"Key" : "Name", "Value" : "testNG"} ]
			}
		},
		"AttachGateway" : {
			"Type" : "AWS::EC2::VPCGatewayAttachment",
			"Properties" : {
			"VpcId"	: { "Ref" : "VPC" },
			"InternetGatewayId" : { "Ref" : "InternetGateway" }
			}
		},
		"NAT" : {
			"Type" : "AWS::EC2::NatGateway",
			"Properties" : {
				"AllocationId" : { "Fn::GetAtt" : ["EIP", "AllocationId"]},
				"SubnetId" : { "Ref" : "PublicSubnet"}
			}
		},
		"EIP" : {
			"Type" : "AWS::EC2::EIP",
			"Properties" : {
				"Domain" : "vpc"
			}
		},
		"PublicSubnet" : {
			"Type" : "AWS::EC2::Subnet",
			"Properties" : {
				"VpcId" : { "Ref" : "VPC" },
				"CidrBlock" : { "Fn::Select" : [ "0", {"Ref": "SubnetPublicIpBlocks"} ] },
				"AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : "" } ] },
				"Tags" : [ {"Key" : "Name", "Value" : "test-Public"} ]
			}
		},
		"PrivateSubnet" : {
			"Type" : "AWS::EC2::Subnet",
			"Properties" : {
				"VpcId" : { "Ref" : "VPC" },
				"CidrBlock" : { "Fn::Select" : [ "0", {"Ref": "SubnetPrivateIpBlocks"} ] },
				"AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : "" } ] },
				"Tags" : [ {"Key" : "Name", "Value" : "test-Private"} ]
			}
		},
		"PublicRouteTable" : {
			"Type" : "AWS::EC2::RouteTable",
			"Properties" : {
				"VpcId" : {"Ref" : "VPC"},
				"Tags" : [ {"Key" : "Name", "Value" : "test-PublicRT"} ]
			}
		},
		"PrivateRouteTable" : {
			"Type" : "AWS::EC2::RouteTable",
			"Properties" : {
				"VpcId" : {"Ref" : "VPC"},
				"Tags" : [ {"Key" : "Name", "Value" : "test-PrivateRT"} ]
			}
		},
		"PublicRoute" : {
			"Type" : "AWS::EC2::Route",
			"Properties" : {
				"RouteTableId" : { "Ref" : "PublicRouteTable" },
				"DestinationCidrBlock" : "0.0.0.0/0",
				"GatewayId" : { "Ref" : "InternetGateway" }
			}
		},
		"PrivateRoute" : {
			"Type" : "AWS::EC2::Route",
			"Properties" : {
				"RouteTableId" : { "Ref" : "PrivateRouteTable" },
				"DestinationCidrBlock" : "0.0.0.0/0",
				"NatGatewayId" : {"Ref" : "NAT"}
			}
		},
		"PublicSubnetRouteTableAssociation" : {
			"Type" : "AWS::EC2::SubnetRouteTableAssociation",
			"Properties" : {
				"SubnetId" : { "Ref" : "PublicSubnet" },
				"RouteTableId" : { "Ref" : "PublicRouteTable" }
			}
		},
		"PrivateSubnetRouteTableAssociation" : {
			"Type" : "AWS::EC2::SubnetRouteTableAssociation",
			"Properties" : {
				"SubnetId" : { "Ref" : "PrivateSubnet" },
				"RouteTableId" : { "Ref" : "PrivateRouteTable" }
			}
		},
		"testSG" : {
			"Type" : "AWS::EC2::SecurityGroup",
			"Properties" : {
				"GroupDescription" : "test Security Group",
				"VpcId" : {"Ref" : "VPC"},
				"SecurityGroupIngress" : [
					{ "IpProtocol" : "tcp", "FromPort" : "1", "ToPort" : "65535", "CidrIp" : { "Ref" : "VpcCIDRIpBlock" } },
					{ "IpProtocol" : "tcp", "FromPort" : "1", "ToPort" : "65535", "CidrIp" : "0.0.0.0/0" }
				]
			}
		},
		"PublicInstance" : {
			"Type" : "AWS::EC2::Instance",
			"DeletionPolicy" : "Retain",
			"Properties" : {
				"InstanceType" : { "Ref" : "InstanceType" },
				"ImageId" : {"Ref"  : "ImageID"},
				"SubnetId" : { "Ref" : "PublicSubnet" },
				"KeyName" : { "Ref" : "AccessKey" },
				"SourceDestCheck" : "false",
				"DisableApiTermination" : "true",
				"PrivateIpAddress" : {"Ref" : "PublicIntanceIP"},
				"SecurityGroupIds" :  [{ "Ref" : "testSG" } ],
				"BlockDeviceMappings" : [
						{
							"DeviceName" : "/dev/sda1",
							"Ebs" : {
								"VolumeSize" : {"Ref" : "RootDeviceSize"},
								"DeleteOnTermination" : "true"
							}
						}
				],
				"Tags" : [ {"Key" : "Name", "Value" : "test-public-instance-01"} ]
			}
		},
		"PublicInstanceIP" : {
			"Type" : "AWS::EC2::EIP",
			"Properties" : {
				"Domain" : "vpc",
				"InstanceId" : { "Ref" : "PublicInstance" }
			}
		},
		"PrivateInstance" : {
			"Type" : "AWS::EC2::Instance",
			"DeletionPolicy" : "Retain",
			"Properties" : {
				"InstanceType" : { "Ref" : "InstanceType" },
				"ImageId" : {"Ref"  : "ImageID"},
				"SubnetId" : { "Ref" : "PrivateSubnet" },
				"KeyName" : { "Ref" : "AccessKey" },
				"SourceDestCheck" : "false",
				"DisableApiTermination" : "true",
				"SecurityGroupIds" : [{ "Ref" : "testSG" }],
				"PrivateIpAddress" : {"Ref" : "PrivateIntanceIP"},
				"BlockDeviceMappings" : [ {
					"DeviceName" : "/dev/sda1",
					"Ebs" : {
						"VolumeSize" : {"Ref" : "RootDeviceSize"},
						"DeleteOnTermination" : "true"
					}
				}],
			"Tags" : [ {"Key" : "Name", "Value" : "test-privatesubnate-instance-01"} ]
			}
		}
	},
	"Outputs" : {
		"VPC" : {
			"Description" : "VPC",
			"Value" : {"Ref" : "VPC"}
		},
		"PublicSubnets" : {
			"Description" : "Public Subnets",
			"Value" : { "Fn::Join":["", [{"Ref" : "PublicSubnet" }]]}
		},
		"PrivateSubnets" : {
			"Description" : "Private Subnets",
			"Value" : { "Fn::Join":["", [{"Ref" : "PrivateSubnet" }]]}
		},
		"PublicSubnetsIps" : {
			"Description" : "Public Subnets Ips",
			"Value" : { "Fn::Join":["", [{"Ref" : "PublicInstance" }]]}
		},
		"PrivateSubnetsIps" : {
			"Description" : "Private Subnets Ips",
			"Value" : { "Fn::Join":["", [{"Ref" : "PrivateInstance" }]]}
		}
	}
}
